{% extends 'base.html.twig' %}
{% block title %}Transaction index{% endblock %}
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="{{asset('css/styles.css')}}" rel="stylesheet" />
    
    
{% endblock %}
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="{{asset('js/scripts.js')}}"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="{{asset('js/datatables-simple-demo.js')}}"></script>
    
{% endblock %}  

{% block body %}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid px-4">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-table me-1"></i>
                    Tableau des transactions
                </div>
                
                <div class="card-body">
    <table  id="datatablesSimple">
        <thead>
            <tr>
                <th>Bien</th>
                <th>Operation</th>
                <th>Qte</th>
                <th>Magasin_source</th>
                <th>Magasin_distination</th>
                <th>Prix_unitaire</th>
                <th>Prix_totale</th>
                <th>date de creation</th>
                <th>date de modification</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for transaction in transactions %}
            <tr>
                <td>{{ transaction.bien }}</td>
                <td>{{ transaction.operation }}</td>
                <td>{{ transaction.qte }}</td>
                <td>{{ transaction.magasinSource }}</td>
                <td>{{ transaction.magasinDistination }}</td>
                <td>{{ transaction.prixUnitaire }}</td>
                <td>{{ transaction.PrixTotale }}</td>
                <td>{{ transaction.createdAt|date('d/m/Y H:i:s')  }}</td>
                <td>{{ transaction.updatedAt|date('d/m/Y H:i:s') }}</td>
                <td>
                    <a href="{{ path('transaction_show', {'id': transaction.id}) }}"  class="btn btn-info">info</a>
                    <a href="{{ path('transaction_edit', {'id': transaction.id}) }}" class="btn btn-success">modification</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr><a href="{{ path('transaction_new') }}" class="btn btn-primary">nouvelle transaction</a></tr>
        
        </tfoot>
    </table>
                </div>
            </div>
            
       </div>
    </main>     
    
    
    
</div>
{% endblock %}
