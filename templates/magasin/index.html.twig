{% extends 'base.html.twig' %}

{% block title %}Magasin index{% endblock %}

{% block body %}
<div id="layoutSidenav_content">
     <main>
                    <div class="container-fluid px-4">
                        <div class="card mb-4">  
                         <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                Tableau des magasins
                            </div>
                            <div class="card-body">
                                <table id="datatablesSimple"> 

    
        <thead>
            <tr>
                
                <th>Annotation</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for magasin in magasins %}
            <tr>
                
                <td>{{ magasin.annotation }}</td>
                <td>{{ magasin.description }}</td>
                <td>
                    <a href="{{ path('magasin_show', {'id': magasin.id}) }}" class="btn btn-info">info</a>
                    <a href="{{ path('magasin_edit', {'id': magasin.id}) }}" class="btn btn-success">modification</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">pas d'enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
        <tr><a href="{{ path('magasin_new') }}" class="btn btn-primary">nouvelle magasin</a></tr>
        
        </tfoot>
    </table>
                    </div>    
                        </div>
                    </div>
            </main> 
            

    
</div>
{% endblock %}
