{% extends 'base.html.twig' %}

{% block title %}Acceuil{% endblock %}
{% block stylesheets %}
    {{ parent() }} {# ajouter parent #}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.css"
          integrity="sha512-/zs32ZEJh+/EO2N1b0PEdoA10JkdC3zJ8L5FTiQu82LR9S/rOQNfQN7U59U9BC12swNeRAz3HSzIL2vpp4fv3w=="
          crossorigin="anonymous" referrerpolicy="no-referrer"/>
    <link href="{{asset('css/styles.css')}}" rel="stylesheet" />

{% endblock %}
{% block body %}
    <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                    <br><br>
                        <div class="row">
                            <div class="col-lg-6 alert-success">
                                
                                <span class="display-3"> {{ countUser['value'] }} </span><i class="fa fa-users"></i> Utilisateurs
                                    
                            </div>
                            <div class="col-lg-6 alert-dark">
                                
                                <span class="display-3"> {{ countop['value'] }} </span><i class="fa fa-calculator"></i> Op√©rations
                                    
                            </div>
                        </div> 
                        
                       <br><br> 
                        <div class="row">
                            <div class="col-lg-8">
                                <div class="card mb-4">
                                    <div class="card-header">
                                        <i class="fas fa-chart-area me-1"></i>
                                        Area Chart Example
                                    </div>
                                     <div class="card-body">
                                        <canvas id="myAreaChart" width="100%" height="50"></canvas>
                                    </div>
                                </div>  
                            </div>
                            
                            <div class="col-lg-4">
                                <div class="card mb-6">
                                    <div class="card-header">
                                        <i class="fas fa-chart-pie me-1"></i>
                                        Pie Chart Example
                                    </div>
                                    <div class="card-body">
                                        <canvas id="myPieChart" width="100%" height="50"></canvas>
                                    </div>
                                    
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
               
            </div>
           

{% endblock %}
{% block javascripts %}
    {{ parent() }} {# ajouter parent #}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.9.3/Chart.min.js" integrity="sha512-s+xg36jbIujB2S2VKfpGmlC3T5V2TF3lY48DX7u2r9XzGzgPsa6wTpOQA7J9iffvdeBN0q9tKzRxVxw1JviZPg==" crossorigin="anonymous" referrerpolicy="no-referrer">
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="{{asset('js/scripts.js')}}"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.min.js" crossorigin="anonymous"></script>
    <script>
       var ctx = document.getElementById("myAreaChart");
var myLineChart = new Chart(ctx, {
  type: 'line',
  data: {
    labels: {{ mins|raw }},
    datasets: [{
      label: "nbr de transactions par min",
      backgroundColor: "green",
      
      data: {{ transnbr|raw }}
    }]
  }
 
});
var ctx = document.getElementById("myPieChart");
var myPieChart = new Chart(ctx, {
  type: 'pie',
  data: {
    labels: {{ types|raw }},
    datasets: [{
      data: {{ nbr|raw }},
      backgroundColor: ['#007bff', '#dc3545', '#ffc107'],
    }],
  },
});
    </script>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>

{% endblock %}

