{% extends 'base.html.twig' %}
{% block title %}Bien index{% endblock %}
{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css" rel="stylesheet" />
    <link href="{{asset('css/styles.css')}}" rel="stylesheet" />
{% endblock %}
{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/js/all.min.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
    <script src="{{asset('js/scripts.js')}}"></script>
    <script src="https://cdn.jsdelivr.net/npm/simple-datatables@latest" crossorigin="anonymous"></script>
    <script src="{{asset('js/datatables-simple-demo.js')}}"></script>
{% endblock %}


{% block body %}
 <div id="layoutSidenav_content">
                <main>
                    <div class="container-fluid px-4">
                        <div class="card mb-4">  
                         <div class="card-header">
                                <i class="fas fa-table me-1"></i>
                                Tableau des biens
                            </div>
                            <div class="card-body">
                                <table id="datatablesSimple"> 

    
        <thead>
            <tr>
                
                <th>Ref</th>
                <th>Description</th>
                <th>Cat√©gorie</th>
                <th>date de creation</th>
                <th>date de modification</th>
                <th>Unite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for bien in biens %}
            <tr>
                
                <td>{{ bien.ref }}</td>
                <td>{{ bien.description }}</td>
                <td>{{ bien.categorie }}</td>
                <td>{{ bien.createdAt.format('Y-m-d H:i:s') }}</td>
                <td>{{ bien.updatedAt.format('Y-m-d H:i:s')}}</td>
                <td>{{ bien.unite }}</td>
                <td>
                    <a href="{{ path('bien_show', {'id': bien.id}) }}" class="btn btn-info">info</a>
                    <a href="{{ path('bien_edit', {'id': bien.id}) }}" class="btn btn-success">modification</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">pas d enregistrement</td>
            </tr>
        {% endfor %}
        </tbody>
        <tfoot>
            <tr>
             <a href="{{ path('bien_new') }}" class="btn btn-primary">noveau bien</a>  
            </tr>                          
        </tfoot>
 
                                </table>
                                
                            </div>    
                        </div>
                    </div>
            </main> 
            
             
</div>
    
{% endblock %}
